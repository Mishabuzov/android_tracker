<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/color_nav_header"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:visibility="gone">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/logo_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_oval="false" />

    <com.kpfu.mikhail.vk.widget.textviews.RobotoBoldTextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Name and surname" />

    <com.kpfu.mikhail.vk.widget.textviews.RobotoRegularTextView
        android:id="@+id/status_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        tools:text="status" />

</LinearLayout>
